<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_five__guess_the_pose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.machinelearn.GuessThePose.Five_GuessThePose"
    android:background="@drawable/onetakephotobackground">

    <TextView
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:text="Can the computer guess your pose?"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"
        android:layout_marginTop="290dp"
        android:id="@+id/testingText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:textSize="22sp"
        android:layout_marginTop="250dp"
        android:id="@+id/testingText2"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="95dp"
        android:background="@drawable/button"
        android:text="Add more training        data"
        android:onClick="goToAddTrainingData"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="95dp"
        android:background="@drawable/button"
        android:text="Guess my         pose"
        android:onClick="tryToGuessPose"/>

    <Button
        android:id="@+id/testButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-10dp"
        android:text="test"
        android:onClick="testAccuracy"/>

    <Button
        android:id="@+id/testAccuracyButton"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="80dp"
        android:text="Test acccuracy"
        android:background="@drawable/button"
        android:onClick="updateProgressBar"/>

    <Button
        android:id="@+id/seeAccuracyButton"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="80dp"
        android:text="View acccuracy"
        android:background="@drawable/button"
        android:onClick="seeAccuracy"/>

    <ImageView
        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>
