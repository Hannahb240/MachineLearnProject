<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two__take_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.machinelearn.WorldTwoCollectEgg.Two_TakePhoto"
    android:background="@drawable/onetakephotobackground">

    <TextView
        android:id="@+id/photoInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/photoInstructions2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center_vertical|center_horizontal"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="150dp"
        android:text="Next"
        android:background="@drawable/button"
        android:id="@+id/nextButton"
        android:onClick="goToResult"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/button"
        android:text="Take      Photo"
        android:id="@+id/takePhoto"
        android:onClick="launchCamera" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp"
        android:text="Retake Photo"
        android:background="@drawable/button"
        android:id="@+id/retakePhoto"
        android:onClick="launchCamera"/>

    <ImageView
        android:id="@+id/myImgView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />


</RelativeLayout>
