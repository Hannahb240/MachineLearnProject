<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_five__train_crouch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.machinelearn.GuessThePose.Five_TrainCrouch"
    android:background="@drawable/onetakephotobackground">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:text="Done!"
        android:background="@drawable/button"
        android:textSize="11dp"
        android:id="@+id/done"
        android:onClick="changeActivity"/>

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:text="Take            Photo 1"
        android:background="@drawable/button"
        android:textSize="11dp"
        android:id="@+id/TakePhoto"
        android:onClick="takePhotograph"/>

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="105dp"
        android:text="Take            Photo 2"
        android:textSize="11dp"
        android:background="@drawable/button"
        android:id="@+id/TakePhoto2"
        android:onClick="takePhotograph"/>

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="190dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="190dp"
        android:text="Take            Photo 3"
        android:background="@drawable/button"
        android:textSize="11dp"
        android:id="@+id/TakePhoto3"
        android:onClick="takePhotograph"/>

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="60dp"
        android:text="Take            Photo 4"
        android:background="@drawable/button"
        android:textSize="11dp"
        android:id="@+id/TakePhoto4"
        android:onClick="takePhotograph"/>

    <ImageView
        android:id="@+id/pic5"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:text="Take            Photo 5"
        android:background="@drawable/button"
        android:textSize="11dp"
        android:id="@+id/TakePhoto5"
        android:onClick="takePhotograph"/>

</RelativeLayout>
